{
  "manifestVersion": 1,
  "id": "build-deploy-status-dev",
  "version": "0.0.1",
  "name": "Build and Deploy Status",
  "scopes": [ "vso.work", "vso.work_write" ],
  "description": "This extension presents the most recent build and release status for a build definition. ",
  "publisher": "rbansal",
  "public": false,
  "icons": {
    "default": "img/logo.png"
  },
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "tags": [
    "Sample"
  ],
  "links": {
    "home": {
      "uri": "https://bit.ly"
    },
    "getstarted": {
      "uri": "https://bit.ly"
    },
    "learn": {
      "uri": "https://bit.ly"
    },
    "support": {
      "uri": "https://bit.ly"
    },
    "repository": {
      "uri": "https://bit.ly"
    },
    "issues": {
      "uri": "https://bit.ly"
    }
  },
  "branding": {
    "color": "rgb(220, 235, 252)",
    "theme": "light"
  },
  "files": [
    {
      "path": "css",
      "addressable": true
    },
    {
      "path": "img",
      "addressable": true
    },
    {
      "path": "scripts",
      "addressable": true
    },
    {
      "path": "index.html",
      "addressable": true
    }
  ],
  "categories": [
    "Integrate"
  ],
  "contributions": [
    {
      "id": "BuildStatusWidget",
      "targets": [
        "ms.vss-dashboards-web.widget-catalog"
      ],
      "type": "ms.vss-web.hub",
      "properties": {
        "name": "Build and Deploy Status",
        "description": "Select a build definition and release. See the status of the latest build/release.",
        "catalogIconUrl:": "img/CatalogIcon.png",
        "supportedSizes": [
          {
            "rowSpan": 1,
            "columnSpan": 2
          }
        ],
        "supportedScopes": [ "project_team" ],
        "uri": "index.html"
      }
    }
  ]
}
